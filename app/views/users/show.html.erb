<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
	<%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" if current_user == @user %>
	<%= link_to "Delete user", user_path(@user), method: :delete, class: "btn btn-outline-danger", data: {confirm: "Are you sure you want to delete the user and all of their articles"} if current_user.admin %>
</div>

<h3 class="text-center mt-4">Articles</h3>

<div class="apple_pagination">
	<%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="apple_pagination">
	<%= will_paginate @articles, :container => false %>
</div>